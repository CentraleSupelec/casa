{% extends 'base.html.twig' %}

{% block title %}
    {{ 'profile.title'|trans }}
{% endblock %}

{% block body %}
    <main class="container flex-grow-1 d-flex flex-column" id="maincontent">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-6">
                <h1 class="text-primary mb-3 text-center text-md-start">
                    {{ 'profile.title'|trans }}
                </h1>
                <h2 class="text-primary mb-2 text-center text-md-start">
                    {{ 'profile.information'|trans }}
                </h2>
                <ul class="text-dark text-center text-md-start p-0"
                    style="list-style: none">
                    <li>
                        <span class="me-2">
                            <i class="fa-solid fa-user text-primary"></i>
                        </span>
                        <span>{{ user.email }}</span>
                    </li>
                </ul>
            </div>
        </div>
    </main>
{% endblock %}
