{% extends 'base.html.twig' %}

{% block title %}
    {{ 'authentication.reset_password.page_title'|trans }}
    {{ parent() }}
{% endblock %}

{% block body %}
    <main class="container mb-3 flex-grow-1 d-flex flex-column justify-content-center"
        id="maincontent">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-6">
                <p class="text-center">
                    {{
                        'authentication.reset_password.reset_form.introduction'|trans
                    }}
                </p>
                {{ form_start(resetForm) }}
                <div class="form-floating mb-3">
                    {{ form_widget(resetForm.plainPassword.first) }}
                    {{ form_label(resetForm.plainPassword.first) }}
                    {% for error in resetForm.plainPassword.first.vars.errors %}
                        <div class="invalid-feedback">
                            {{ error.message|trans }}
                        </div>
                    {% endfor %}
                </div>
                <div class="form-floating mb-3">
                    {{ form_widget(resetForm.plainPassword.second) }}
                    {{ form_label(resetForm.plainPassword.second) }}
                    {% for error in resetForm.plainPassword.second.vars.errors %}
                        <div class="invalid-feedback">
                            {{ error.message|trans }}
                        </div>
                    {% endfor %}
                </div>
                <div class="row">
                    <div class="col d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">
                            {{
                                'authentication.reset_password.reset_form.button'|trans
                            }}
                        </button>
                    </div>
                </div>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </main>
{% endblock %}
