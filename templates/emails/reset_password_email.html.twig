{% extends 'emails/base.html.twig' %}

{% block content %}
    <mj-section>
        <mj-column>
            <mj-text align="center" color="#8b1b59" font-size="40px">
                {{ 'authentication.reset_password.email.header'|trans }}
            </mj-text>
        </mj-column>
    </mj-section>
    <mj-section>
        <mj-column>
            <mj-text align="center" font-size="20px" color="#312336">
                {{ 'authentication.reset_password.email.body'|trans }}
            </mj-text>
        </mj-column>
    </mj-section>
    <mj-section>
        <mj-column>
            <mj-button href="{{
                url(
                    'app_reset_password',
                    {
                        token: resetToken.token
                    }
                )
                }}"
                background-color="#8b1b59"
                padding-bottom="0"
                font-size="20px"
                border-radius="10px"
                color="#ffffff">
                {{ 'authentication.reset_password.email.button'|trans }}
            </mj-button>
            <mj-text align="center"
                font-size="15px"
                font-style="italic"
                color="#7c8091">
                {{
                    'authentication.reset_password.request.link_expiration'|trans
                }}
                {{
                    resetToken.expirationMessageKey|trans(
                        resetToken.expirationMessageData,
                        'ResetPasswordBundle'
                    )
                }}.
            </mj-text>
        </mj-column>
    </mj-section>
{% endblock %}
