{% extends 'emails/base.html.twig' %}

{% block content %}
    <mj-section>
        <mj-column>
            <mj-text align="center" color="#8b1b59" font-size="30px">
                {{ 'housing_request.emergency.email.header'|trans }}
            </mj-text>
        </mj-column>
    </mj-section>
    {% if (emergencyQualificationQuestions|length) > 0 %}
        <mj-section>
            <mj-column>
                <mj-text align="center" font-size="20px" color="#312336">
                    {{
                        'housing_request.emergency.email.qualification_info'|trans
                    }}
                </mj-text>
                {% for question in emergencyQualificationQuestions %}
                    <mj-text font-size="18px" color="#312336">
                        {{
                            ('housing_request.emergency.qualification.questions.'
                                ~ question)|trans
                        }}
                    </mj-text>
                {% endfor %}
            </mj-column>
        </mj-section>
    {% endif %}
    <mj-section>
        <mj-column>
            <mj-text align="center" font-size="20px" color="#312336">
                {{ 'housing_request.common.email.introduction'|trans }}
            </mj-text>
            <mj-text font-size="18px" color="#312336">
                {{ request.body|nl2br }}
            </mj-text>
        </mj-column>
    </mj-section>
    <mj-section>
        <mj-column>
            <mj-text align="center" font-size="20px" color="#312336">
                {{ 'housing_request.common.email.student_info'|trans }}
            </mj-text>
            <mj-text font-size="18px" color="#312336">
                {{ 'profile.full_name'|trans }}:
                {{ request.student.firstName }}
                {{ request.student.lastName }}
            </mj-text>
            <mj-text font-size="18px" color="#312336">
                {{ 'profile.email'|trans }}
                {{ 'housing_request.common.email.carbon_copy'|trans }}:
                {{ request.student.email }}
            </mj-text>
            {% set phone = request.student.phone %}
            {% if phone %}
                <mj-text font-size="18px" color="#312336">
                    {{ 'profile.phone'|trans }}:
                    {{ phone }}
                </mj-text>
            {% endif %}
        </mj-column>
    </mj-section>
{% endblock %}
