{% extends 'emails/base.html.twig' %}

{% block content %}
    <mj-section>
        <mj-column>
            <mj-text align="center" color="#8b1b59" font-size="40px">
                {{ 'authentication.verification_email.header'|trans }}
            </mj-text>
        </mj-column>
    </mj-section>
    <mj-section>
        <mj-column>
            <mj-text align="center" font-size="20px" color="#312336">
                {{ 'authentication.verification_email.body'|trans }}
            </mj-text>
        </mj-column>
    </mj-section>
    <mj-section>
        <mj-column>
            <mj-button href="{{ signed_url }}"
                background-color="#8b1b59"
                padding-bottom="0"
                font-size="20px"
                border-radius="10px"
                color="#ffffff">
                {{ 'authentication.verification_email.button'|trans }}
            </mj-button>
            <mj-text align="center"
                font-size="15px"
                font-style="italic"
                color="#7c8091">
                {{ 'authentication.verification_email.expiration'|trans }}
                {{
                    expires_at_message_key|trans(
                        expires_at_message_data,
                        'VerifyEmailBundle'
                    )
                }}.
            </mj-text>
        </mj-column>
    </mj-section>
{% endblock %}
